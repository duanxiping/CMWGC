<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_default_app_bg">

    <ImageView
        android:id="@+id/tv_app"
        android:layout_marginTop="@dimen/px_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_vrd_logo"/>

    <TextView
        android:id="@+id/tv_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="@dimen/text_h2_size"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_app"
        android:text="VER:1.0"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ver">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_middle"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="MODEL:"/>
            <TextView
                android:id="@+id/tv_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_middle"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="IMEI:"/>
            <TextView
                android:id="@+id/tv_imei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_middle"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_middle"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="ICCID:"/>
            <TextView
                android:id="@+id/tv_iccid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_middle"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textStyle="bold"
                android:textSize="@dimen/text_middle"
                android:textColor="@color/white"
                android:text="VER.:"/>
            <TextView
                android:id="@+id/tv_ver_of_Android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_middle"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/tv_check_update"
        android:layout_width="@dimen/px_450"
        android:layout_height="@dimen/px_120"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        android:textSize="@dimen/text_middle"
        android:background="@drawable/selector_btn_bg"
        android:text="@string/check_update"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px_66"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

    </LinearLayout>


</RelativeLayout>